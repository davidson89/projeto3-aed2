FLAGS = -ansi -pedantic -Wall -g -efence
CLASSES = main.cpp AVLTree.cpp Folha.cpp

# regra principal
all: lab3

# gera o execut√°vel
lab3:
	g++ -o lab3 ${CLASSES} 
	@echo "\n\n***** Para executar o programa digite ./lab3 *****\n\n"
	@echo "\n\n***** Para gerar a documentacao digite make doxygen *****\n\n"

# remove o clean
clean:
	rm -f *.o lab3

doxygen:
	g++ ${FLAGS} -o lab3d ${CLASSES}
	doxygen -g
	doxygen
